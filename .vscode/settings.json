{
  "workbench.panel.defaultLocation": "right",
  "workbench.panel.opensMaximized": "preserve",

  // https://github.com/microsoft/vscode/issues/158603
  // "workbench.panel.size": 400,
  "supermaven.allowGitignore": true,

  "search.quickOpen.includeHistory": false,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "execs/**": true,
    "helpers/**": true,
    "polyfills/**": true,
    "tsconfig.json": true,
    ".vscode/**": true
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#0952a0",
    "activityBar.background": "#0952a0",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#f32c8c",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#0952a0",
    "statusBar.background": "#063970",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#0952a0",
    "statusBarItem.remoteBackground": "#063970",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#063970",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#06397099",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#063970"
}
