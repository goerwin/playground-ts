{
  "workbench.panel.defaultLocation": "right",
  "workbench.panel.opensMaximized": "preserve",

  // https://github.com/microsoft/vscode/issues/158603
  // "workbench.panel.size": 400,
  "supermaven.allowGitignore": true,

  "search.quickOpen.includeHistory": false,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "*.json": true,
    "*.ts": true,
    "*.md": true,
    ".*": true,
    "helpers/**": true,
    "polyfills/**": true,
    ".vscode/**": true
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#f5a73f",
    "activityBar.background": "#f5a73f",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#067948",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#f5a73f",
    "statusBar.background": "#f2910f",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#c3740b",
    "statusBarItem.remoteBackground": "#f2910f",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#f2910f",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#f2910f99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#f2910f"
}
